package com.criticalfusion.thenandnow.view{	import com.criticalfusion.thenandnow.view.nav.AddToLandButton;	import com.criticalfusion.thenandnow.view.nav.CloseButton;	import com.criticalfusion.thenandnow.view.nav.ScrollDownButton;	import com.criticalfusion.thenandnow.view.nav.ScrollUpButton;	import com.greensock.TweenMax;		import flash.display.Sprite;	import flash.text.TextField;
		public class IconInfoBox extends Sprite	{		public var info_text:TextField;		public var add_to_land:AddToLandButton;		public var close_button:CloseButton;		public var scroll_up_button:ScrollUpButton;		public var scroll_down_button:ScrollDownButton;		public var _icon:Icon;				public var incorrect_message:Sprite;		public var upgrade_message:Sprite;				public var onClose:Function;		public var onAddToLand:Function;				public function IconInfoBox()		{			super();			initialize();		}				final public function set icon(value:Icon):void		{			_icon = value;			info_text.htmlText = _icon.description;		}				final public function get icon():Icon		{			return _icon;		}				final public function showUpgrade():void		{			upgrade_message.alpha = 0;			TweenMax.to(upgrade_message, .5, {autoAlpha:1});		}				final public function showIncorrect():void		{			incorrect_message.alpha = 0;			TweenMax.to(incorrect_message, .5, {autoAlpha:1});		}				final protected function onCloseClicked():void		{			if(onClose != null) onClose();		}				final protected function onAddToLandClicked():void		{			if(onAddToLand != null) onAddToLand(icon);		}				final protected function scrollUp():void		{			info_text.scrollV--;		}				final protected function scrollDown():void		{			info_text.scrollV++;		}				protected function initialize():void		{			incorrect_message.visible = false;			upgrade_message.visible = false;						close_button.onClick = onCloseClicked;			add_to_land.onClick = onAddToLandClicked;						scroll_up_button.onClick = scrollUp;			scroll_down_button.onClick = scrollDown;		}	}}